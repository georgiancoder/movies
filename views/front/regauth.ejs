<%- include('./header') %>

<div class="container">
	<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#auth" role="tab" aria-controls="auth" aria-selected="true">ავტორიზაცია</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#reg" role="tab" aria-controls="reg" aria-selected="false">რეგისტრაცია</a>
  </li>  
</ul>
<div class="tab-content" id="myTabContent">
	  <div class="tab-pane fade show active" id="auth" role="tabpanel" aria-labelledby="auth-tab">
	  		<form class="form" action="/login" method="post">
	  			<div class="form-group col-sm-4">
	  				<input type="text" name="email" placeholder="ელ.ფოსტა" class="form-control" required>
	  			</div>
	  			<div class="form-group col-sm-4">
	  				<input type="password" name="password" placeholder="პაროლი" class="form-control" required>
	  			</div>
	  			<button type="submit" class="btn btn-primary">შესვლა</button>
	  		</form>
	  </div>
	  <div class="tab-pane fade" id="reg" role="tabpanel" aria-labelledby="reg-tab">
	  	<form class="form" action="/reg" method="post">
	  		<div class="form-group col-sm-4">
	  			<input type="text" name="name" placeholder="სახელი" class="form-control" required>
	  		</div>
	  		<div class="form-group col-sm-4">
	  			<input type="text" name="lastname" placeholder="გვარი" class="form-control" required>
	  		</div>
	  		<div class="form-group col-sm-4">
	  			<input type="email" name="email" placeholder="ელ.ფოსტა" class="form-control" required>
	  		</div>
	  		<div class="form-group col-sm-4">
	  				<input type="password" name="password" placeholder="პაროლი" class="form-control" required>
	  		</div>
	  		<div class="form-group col-sm-4">
	  				<input type="password" name="passconfirm" placeholder="გაიმეორეთ პაროლი" class="form-control" required>
	  		</div>
	  		<button type="submit" class="btn btn-primary">რეგისტრაცია</button>
	  	</form>
	  </div>
	</div>
</div>

<%- include('./footer') %>
