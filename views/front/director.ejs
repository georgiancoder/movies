<%- include('./header') %>

<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <img src="<%= data[0].avatar %>" alt="" width="200" align="left">
      <%= data[0].name %> <%= data[0].lastName %><br>
      სრული ბიოგრაფია: <a href="<%= data[0].moreInfo %>" target="_blank"><%= data[0].moreInfo %></a>
    </div>
  </div>
    <div class="row">
      <% data[0].movies.forEach(movie=>{ %>
				<div class="col-lg-4 col-sm-12">
					<div class="row">
						<img src="<%= movie.poster %>" class="col-lg-6 col-sm-12" style="width: 100%; height: 250px; object-fit: cover;">
						<div class="col-lg-6 col-sm-12">
							<h5><%= movie.title.ka %></h5>
							<h6><%= movie.title.en %></h6>
							<%- movie.description.substr(0,100) %>...
							<a class="btn btn-primary" href="/movie/<%= movie._id %>">სრულად ნახვა</a>
						</div>
					</div>
				</div>
			<% }) %>
    </div>
</div>

<%- include('./footer') %>
